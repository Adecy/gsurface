    "\n",
    "tore = Tore(r=0.5, R=1.0)\n",
    "\n",
    "surface = tore.build_surface(*tore.mesh(50, 50))\n",
    "\n",
    "mayavi_plot_surfaces([SurfacePlot(surface)])"
